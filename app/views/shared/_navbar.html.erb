<div class='h-[10vh] bg-primary-custom flex items-center justify-between px-4'>
  <div class=" aspect-square bg-white rounded-full p-2">
    <%= image_tag 'NexusLogo.png', class: 'size-15'%>
  </div>

  <div class="flex flex-col h-full py-2 justify-around">
    <% if user_signed_in? %>
      <span class="text-white font-medium text-sm">
        Logged in as <%= current_user.email %>
      </span>
      <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn-primary-border-white' %>
    <% else %>
      <%= link_to 'Login', new_user_session_path %>
      <%= link_to 'Sign up', new_user_registration_path %>
    <% end %>
  </div>
</div>