<div class="w-full h-full flex justify-center items-center">
  <div class="border-1 p-4">
    <h2 class="text-center text-2xl mb-3">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field flex flex-row justify-between mb-3">
        <%= f.label :email, class: 'me-3' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field flex flex-row justify-between mb-3">
        <%= f.label :password, class: 'me-3' %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex flex-row mb-3">
          <%= f.check_box :remember_me, class: 'me-3' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn-primary cursor-pointer mb-3' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>